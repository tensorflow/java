<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.tensorflow</groupId>
    <artifactId>tensorflow-java</artifactId>
    <version>0.5.0-SNAPSHOT</version>
  </parent>
  <artifactId>tensorflow-kotlin-parent</artifactId>
  <packaging>pom</packaging>

  <name>TensorFlow Kotlin Parent</name>
  <description>Parent POM of TensorFlow Kotlin artifacts</description>

  <modules>
    <module>tensorflow-kotlin-generator</module>
    <module>tensorflow-core-kotlin</module>
    <module>tensorflow-framework-kotlin</module>
    <module>tensorflow-kotlin</module>
    <module>tensorflow-kotlin-jupyter</module>
    <module>tensorflow-core-kotlin-jupyter</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>org.jetbrains.kotlin</groupId>
      <artifactId>kotlin-stdlib-jdk8</artifactId>
      <version>${kotlin.version}</version>
    </dependency>
  </dependencies>

  <properties>
    <kotlin.version>1.6.10</kotlin.version>
    <kotlin_jupyter.version>0.11.0-40</kotlin_jupyter.version>
    <ktfmt.version>0.30</ktfmt.version>
    <kotlin.jvmTarget>1.8</kotlin.jvmTarget>
  </properties>

  <profiles>
    <profile>
      <id>jdk11</id>
      <properties>
        <kotlin.jvmTarget>11</kotlin.jvmTarget>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-maven-plugin</artifactId>
        <version>${kotlin.version}</version>
        <configuration>
          <jvmTarget>${kotlin.jvmTarget}</jvmTarget>
        </configuration>

        <executions>
          <execution>
            <id>compile</id>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>

          <execution>
            <id>test-compile</id>
            <goals>
              <goal>test-compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>${spotless.version}</version>
        <configuration>
          <kotlin>
            <ktfmt>
              <version>${ktfmt.version}</version>
            </ktfmt>
          </kotlin>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

